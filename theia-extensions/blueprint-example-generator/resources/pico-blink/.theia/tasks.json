{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Binary build release (blink)",
            "type": "shell",
            "command": "cmake . -B build -DCMAKE_BUILD_TYPE=Release && make -C build -j4",
            "options": {
                "cwd": "${workspaceFolder}/blink"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Binary build debug (blink)",
            "type": "shell",
            "command": "cmake . -B build -DCMAKE_BUILD_TYPE=Debug && make -C build -j4",
            "options": {
                "cwd": "${workspaceFolder}/blink"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}