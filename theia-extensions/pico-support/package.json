{
  "name": "@eclipse-cdt-cloud/pico-support",
  "version": "1.30.0",
  "description": "Extension for generating Raspberry Pi Pico examples in CDT.cloud blueprint",
  "dependencies": {
    "@theia/core": "1.30.0",
    "@theia/workspace": "1.30.0",
    "@theia/filesystem": "1.30.0",
    "@theia/editor": "1.30.0"
  },
  "devDependencies": {
    "rimraf": "^2.7.1",
    "tslint": "^5.12.0",
    "typescript": "^4.5.5"
  },
  "theiaExtensions": [
    {
      "frontendElectron": "lib/browser/frontend-module",
      "frontend": "lib/browser/frontend-module",
      "backend": "lib/node/backend-module"
    }
  ],
  "keywords": [
    "theia-extension"
  ],
  "license": "EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-cdt-cloud/cdt-cloud-blueprint.git"
  },
  "bugs": {
    "url": "https://github.com/eclipse-cdt-cloud/cdt-cloud-blueprint/issues"
  },
  "homepage": "https://cdt-cloud.io/",
  "files": [
    "resources",
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "yarn clean && yarn build",
    "clean": "rimraf lib *.tsbuildinfo",
    "build": "tsc -b",
    "lint": "eslint --ext js,jsx,ts,tsx src",
    "lint:fix": "eslint --ext js,jsx,ts,tsx src --fix",
    "update:next": "ts-node ../../scripts/update-theia-to-next.ts"
  }
}
